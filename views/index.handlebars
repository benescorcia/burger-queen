<div class="container">
    <div class="jumbotron mx-auto">
        <h1>Burger Queen! </h1>
        <div>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Type your Burger</label>
                    <input type="text" id="newburger" name="burger" data-placeholder="">
                    <button type="submit" id="addburger">Add Burger</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div>
                    <ul>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <p> {{this.id}} - {{this.burger_name}}</p>
                        <button type="button" class="eatburger btn" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Devour it</button>
                        <br>
                        {{/unless}}
                        {{/each}}
                    </ul>
            </div>
        </div>
        <div class="col-sm-6">
                <div>
                    <ul>
                        {{#each burgers}}
                        {{#if this.devoured}}
                        <p> {{this.id}} - {{this.burger_name}}</p>
                        
                        <br>
                        <br>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
        </div>
    </div>
</div>